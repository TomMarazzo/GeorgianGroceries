@model IEnumerable<GeorgianGroceries.Models.Category>
<h1>Welcome to Georgian's Online Grocery Store</h1>
<ul>
    @foreach (var c in Model)
    {
        <li>
            <a asp-controller="Store" asp-action="Browse" asp-route-category="@c.Name">@c.Name</a>
        </li>
    }
</ul>
